	background-color: @primaryFaded;
}

.variant-color {
	color: @variant;
}
.nav-pills > li.active > a.variant-background, .variant-background {
	background-color: @variant;
}

.variant-color-light {
	color: @variantLight;
}
.nav-pills > li.active > a.variant-background-light {
	background-color: @variantLight;
}

.variant-color-dark {
	color: @variantDark;
}
.nav-pills > li.active > a.variant-background-dark {
	background-color: @variantDark;
}

.variant-color-faded {
	color: @variantFaded;
